package gui;

import java.net.URL;
import java.util.ResourceBundle;

import gui.util.Alerts;
import gui.util.Constraints;
import javafx.fxml.FXML;
import javafx.fxml.Initializable;
import javafx.scene.control.Alert;
import javafx.scene.control.Button;
import javafx.scene.control.Label;
import javafx.scene.control.TextField;
import model.entities.Departamento;
import model.services.DepartamentoService;

public class DepartamentoFormControler implements Initializable {

	private Departamento dep;
	
	@FXML
	private TextField txtId;	
	@FXML
	private TextField txtNome;	
	@FXML
	private Button btSalvar;	
	@FXML
	private Button btCancelar;
	@FXML
	private Label lblError;
	
	public void setDepoartamento(Departamento dp) {
		this.dep = dp;
	}
	
	public void onbtSalvarAction() {
		
		Departamento dp = new Departamento();
		dp.setNome(txtNome.getText());		
		DepartamentoService sdao = new DepartamentoService();
		sdao.InserirRegistro(dp);
		Alerts.showAlert("Cadastro de Departamento",null , "Novo departamento inserido com sucesso.", Alert.AlertType.INFORMATION);
	}
	
	public void onbtCancelarAction() {
		System.out.println("Bot√£o Cancelar foi apertado");		
	}
	
	@Override
	public void initialize(URL arg0, ResourceBundle arg1) {
		txtNome.setFocusTraversable(true);;
		Constraints.setTextFieldMaxLength(txtNome, 30);
	}

}
